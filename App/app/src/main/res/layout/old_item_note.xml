<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_frame"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/budget_top_note_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="TOP"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/note_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:gravity="right"
            android:text="RUB"
            android:textSize="25sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/date_budget_note_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="DATE"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/text_note_budget_note_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text_note"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorWhite"
        android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/note_did_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/note_did_image_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/old_ic_agree_button"
            android:layout_weight="1"
            android:background="@color/colorTransparent"/>
        <ImageButton
            android:id="@+id/note_didnt_image_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/old_ic_cancel_button"
            android:layout_weight="1"
            android:background="@color/colorTransparent"/>
    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.Toolbar>-->

    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_action_name"/>

    <Button
        android:id="@+id/change_book_cover"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_cover"
        android:layout_marginLeft="16dp"
        android:text="Выбрать" />

    <EditText
        android:id="@+id/book_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_cover"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:hint="Название"/>

    <EditText
        android:id="@+id/book_description"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/book_cover"
        android:layout_below="@id/book_title"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="3"
        android:hint="Описание"
        android:layout_alignBottom="@+id/change_book_cover" />

    <TextView
        android:id="@+id/cover_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingTop="8dp"
        android:layout_toLeftOf="@id/book_title"
        android:text="Обложка"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

</RelativeLayout>